<div class="full-width full-height col-xs-12">
    <div class="col-xs-12 widget-outlet">
        <div class="widget_new full-width full-height">
            {{widget-header
            widgetTitle=app.lang.labels.selectLayout
            hideWidgetLink=true
            hideSymbol=true}}

            <div class="widget-container-new">
                <div class="layout-container full-width">
                    <div class="layout-col v-top text-center pad-l-tb">
                        {{#each layoutItem in layoutContent}}
                            <div class="layout-inline pad-l-lr pad-l-tb layout-select">
                                <a {{action 'selectLayout' layoutItem}}>
                                    <div>
                                        <table style="border-collapse: separate; border-spacing: 5px;">
                                            {{#each rowCount in layoutItem.r}}
                                                <tr>
                                                    {{#each colCount in layoutItem.c}}
                                                        <td style="height: {{layoutItem.h}}; width: {{layoutItem.w}}; background-color: rgba(0, 0, 0, 0.56)">
                                                        </td>
                                                    {{/each}}
                                                </tr>
                                            {{/each}}
                                        </table>
                                    </div>
                                </a>
                            </div>
                        {{/each}}
                    </div>
                </div>

                <!-- TODO [Atheesan]: Render layouts dynamically-->
