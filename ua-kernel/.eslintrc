{
  "env": {
    "browser": true,
    "es6": true
  },

  "ecmaFeatures": {
    "modules": true,
    "classes": true,
    "jsx": true
  },

  "rules": {
    //
    // Possible Errors
    //
    "no-console": 2,
    "no-debugger": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-unreachable": 2,
    "use-isnan": 2,

    //
    // Best Practices
    //
    "curly": [2, "all"],
    "eqeqeq": [2, "smart"],
    "no-alert": 2,
    "no-else-return": 0,
    "no-eval": 2,
    "no-extend-native": 0,
    "no-implied-eval": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 2,
    "no-redeclare": 2,
    "no-sequences": 2,
    "no-with": 2,
    "radix": 2,

    //
    // Variables
    //
    // Note: Below rules are enabled by default.
    // no-catch-shadow,
    // no-delete-var,
    // no-label-var,
    // no-shadow-restricted-names,
    // no-shadow,
    // no-undef-init,
    // no-undef,
    // no-undefined,
    // no-unused-vars,
    //
    "no-use-before-define": 0,

    //
    // Stylistic Rules
    //
    // "camelcase": [2, {"properties": "always"}], // This will not work with our enum naming conventions.
    "comma-spacing": [2, {"before": false, "after": true}],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [2, "that"],
    "eol-last": 0,
    // "indent": [2, 4, {"indentSwitchCase": true}],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "new-cap" : 0,
    "no-array-constructor": 2,
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-new-object": 2,
    "no-underscore-dangle": 0,
    "object-curly-spacing": [2, "never"],
    "quotes": [2, "single"],
    "semi-spacing": [2, {"before": false, "after": true}],
    // "space-after-keywords": 2,
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-in-parens": [2, "never"],
    "spaced-comment": [2, "always"],
    "space-unary-ops": [1, { "words": false, "nonwords": false }]
  }
}