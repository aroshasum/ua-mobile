<div class="layout-container">
    <div class="layout-row multi-steps">
        {{#each element in stepArray}}
            <div class="layout-col {{element.step}}">
                <div class=" layout-row step font-l ellipsis pad-m-lr">
                    {{#if element.isCompleted}}
                        <div class="layout-col pad-s-r">
                            <svg  class="svg-checkmark" viewBox="0 0 130.2 130.2">
                                <circle class="path circle" fill="none" stroke="#FFFFFF" stroke-width="6" stroke-miterlimit="10" cx="65.1" cy="65.1" r="62.1"/>
                                <polyline class="path check" fill="none" stroke="#FFFFFF" stroke-width="6" stroke-linecap="round" stroke-miterlimit="10" points="100.2,40.2 51.5,88.8 29.8,67.5 "/>
                            </svg>
                        </div>
                    {{/if}}
                    <div class=" layout-col full-width h-middle">{{element.displayName}}</div>
                </div>
                <span class="afterStep"></span>
            </div>
        {{/each}}
    </div>
</div>
